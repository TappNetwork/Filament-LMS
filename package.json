{
  "name": "filament-lms",
  "version": "1.0.0",
  "description": "A simple LMS plugin for Filament",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "dev:scripts": "node bin/build --watch",
    "build:scripts": "node bin/build",
    "dev:styles": "cp resources/css/plugin.css dist/filament-lms.css",
    "build:styles": "cp resources/css/plugin.css dist/filament-lms.css",
    "dev": "npm-run-all --parallel dev:*",
    "build": "npm-run-all build:*"
  },
  "devDependencies": {
    "@vimeo/player": "^2.24.0",
    "autoprefixer": "^10.4.7",
    "esbuild": "^0.25.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2"
  },
  "dependencies": {
    "vidstack": "^1.12.12"
  }
}
